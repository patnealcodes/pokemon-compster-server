{
  "name": "pokemon-compster-server",
  "version": "0.1.2",
  "description": "The server supporting the Pokemon Compster web app",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --config nodemon.json src/index.ts",
    "dev:debug": "nodemon --config nodemon.json --inspect-brk src/index.ts",
    "migrate": "knex migrate:latest",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "postinstall": "yarn build",
    "prestart": "yarn build",
    "start": "node .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patnealcodes/pokemon-compster.git"
  },
  "author": "patnealcodes",
  "license": "SEE LICENSE IN ROOT",
  "bugs": {
    "url": "https://github.com/patnealcodes/pokemon-compster/issues"
  },
  "homepage": "https://pokemon.compster.io",
  "engines": {
    "yarn": "1.22.4"
  },
  "dependencies": {
    "express": "^4.17.1",
    "knex": "^0.95.6",
    "pg": "^8.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.12",
    "@types/node": "^16.0.0",
    "dotenv": "^10.0.0",
    "knex-types": "^0.2.0",
    "nodemon": "^2.0.9",
    "ts-node": "^10.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.3.5"
  }
}
